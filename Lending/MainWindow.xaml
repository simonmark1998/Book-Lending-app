<Window x:Class="Lending.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lending"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
		<StackPanel HorizontalAlignment="Left"/>
		<Button Content="Create Author" HorizontalAlignment="Left" Height="31" Margin="259,65,0,0" VerticalAlignment="Top" Width="238" Click="OpenAuthorForm"/>
		<Button Content="Create student" HorizontalAlignment="Left" Height="31" Margin="259,115,0,0" VerticalAlignment="Top" Width="238" Click="OpenStudentForm"/>
		<Button Content="Create book" HorizontalAlignment="Left" Height="31" Margin="259,165,0,0" VerticalAlignment="Top" Width="238" Click="OpenBookForm"/>
		<Button Content="Borrow book" HorizontalAlignment="Left" Height="31" Margin="259,215,0,0" VerticalAlignment="Top" Width="238" Click="OpenBorrowBookForm"/>
		<Button Content="Missing books" HorizontalAlignment="Left" Height="31" Margin="259,265,0,0" VerticalAlignment="Top" Width="238" Click="OpenMissingBooks"/>
	</Grid>
</Window>
